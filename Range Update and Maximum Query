

package q14112;
import java.util.Scanner;
public class CTJ14112
{


public static void main(String[] args){
Scanner scanf = new Scanner(System.in);
int n= scanf.nextInt();
int m= scanf.nextInt();
int[] arr = new int[n+1];
for(int i=0;i<=n;i++){
arr[i]=0;
}

for(int i=0;i<m;i++){
int a= scanf.nextInt();
int b= scanf.nextInt();
int c= scanf.nextInt();
for(int l=a;l<=b;l++){
arr[l]  =arr[l]+c;
}
}
m=arr[0];
for(int i=0;i<=n;i++){
if(arr[i]>m){
m=arr[i];}
}
System.out.println(m);
}
}


